@{
    ViewData["Title"] = "Home";
}


    <div class="container-fluid">
        <div id="carsou" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carsou" data-slide-to="0" class="active"></li>
                <li data-target="#carsou" data-slide-to="1"></li>
                <li data-target="#carsou" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" height="600px" src="~/images/catfirst.jpg" alt="First slide" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" height="600px" src="~/images/dogfirst.jpg" alt="Second slide" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" height="600px" src="~/images/tigerfirst.jpg" alt="Third slide" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carsou" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carsou" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="ctHeader">
            <h1 class="text-center ">Welcome to hotel Animals</h1>
        </div>
        <div class="row">
            <div class="col-md-4 col-12 col-sm-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/images/hotel.jpg" alt="Hotel Pessi">
                    <div class="card-body">
                        <h5 class="card-title">Double room</h5>
                        <p class="card-text">It's include 2 pet in room. It very convenient</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Room" asp-action="Index">Go booking</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-12 col-sm-4">

            </div>
            <div class="col-md-4 col-12 col-sm-4">

            </div>
        </div>
    </div>